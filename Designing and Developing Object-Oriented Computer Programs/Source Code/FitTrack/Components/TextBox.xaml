<UserControl x:Class="FitTrack.Components.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitTrack.Components"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="180">

    <Border CornerRadius="5" Background="#FF2A2A2A" BorderBrush="Gray" BorderThickness=".5">
        <Grid>
            <TextBox x:Name="Input" Margin="2" BorderThickness="0" 
                         CaretBrush="AliceBlue"
                     TextChanged="Input_TextChanged"
                     Background="Transparent" VerticalAlignment="Center"
                     Foreground="AliceBlue"/>
            <TextBlock x:Name="PlaceHolderText" Background="Transparent"
                       Foreground="Gray" Margin="4,0,4,0" VerticalAlignment="Center"
                       Panel.ZIndex="-1"/>
        </Grid>
    </Border>
</UserControl>
